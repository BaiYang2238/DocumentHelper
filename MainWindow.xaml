    <Grid>
        <!-- 背景图片 -->
        <Image Source="C:\Users\HUAWEI\source\repos\DocumentHelper\background.png" Stretch="UniformToFill" Opacity="1"/>

        <!-- 磨砂玻璃层 -->
        <Border Background="#B3FFFFFF" CornerRadius="8" Margin="0">
            <Border.Effect>
                <BlurEffect Radius="15" KernelType="Gaussian"/>
            </Border.Effect>
        </Border>

        <hc:SimpleStackPanel Margin="5">
            <!-- 标题栏 - 使用Border添加白色半透明背景 -->
            <Border Background="#80F0F0F0" CornerRadius="4" Margin="5">
                <hc:SimpleStackPanel VerticalAlignment="Top" Height="60" 
                                     Orientation="Horizontal" 
                                     Background="Transparent">
                    <Button Content="添加成员" Height="45" FontSize="14" Margin="5,0,5,0" hc:IconElement.Geometry="{StaticResource AddRowIcon}" hc:IconElement.Height="25"/>
                    <Button Content="删除成员" Height="45" FontSize="14" Margin="5,0,5,0" hc:IconElement.Geometry="{StaticResource DeleteRowIcon}" hc:IconElement.Height="25"/>
                    <hc:Divider Orientation="Vertical" Margin="10,15,10,15" LineStrokeThickness="2" Height="Auto" LineStroke="#80000000"/>
                    <Button Content="启动服务" Height="45" FontSize="14" Margin="5,0,5,0" hc:IconElement.Geometry="{StaticResource StartServiceIcon}" hc:IconElement.Height="25"/>
                    <Button Content="停止服务" Height="45" FontSize="14" Margin="5,0,5,0" hc:IconElement.Geometry="{StaticResource StopServiceIcon}" hc:IconElement.Height="25"/>
                    <hc:Divider Orientation="Vertical" Margin="10,15,10,15" LineStrokeThickness="2" Height="Auto" LineStroke="#80000000"/>
                    <Button Content="设置" Height="45" FontSize="14" Margin="5,0,5,0" hc:IconElement.Geometry="{StaticResource SettingsIcon}" hc:IconElement.Height="25"/>
                </hc:SimpleStackPanel>
            </Border>

            <hc:Divider Height="5"
                        Margin="5"
                        LineStrokeThickness="2"
                        LineStroke="{Binding Source={StaticResource AppSettings}, Path=FifthThemeColor}"/>
            <!-- 优化后的DataGrid -->
            <DataGrid AutoGenerateColumns="False" Margin="5" 
                      ColumnHeaderHeight="30" RowHeight="30" 
                      VerticalAlignment="Stretch" 
                      VerticalContentAlignment="Stretch"
                      Height="Auto"
                      Background="#B3FFFFFF"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Opacity="1">
                <DataGrid.DataContext>
                    <local:Student/>
                </DataGrid.DataContext>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding address}" Width="80"/>
                    <DataGridTextColumn Header="Document Name" Binding="{Binding studentName}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding volunteerState}" Width="120"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding studentNation}" Width="100"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding regDate}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </hc:SimpleStackPanel>
    </Grid>
</hc:Window>