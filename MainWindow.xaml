<hc:Window x:Class="DocumentHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentHelper"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="DocumentHelper" Height="450" Width="800">
    <hc:SimplePanel>
        <hc:Row hc:Gutter="5" hc:Margin="20,20,5,5" HorizontalAlignment="Left" Width="550">
            <hc:Col Span="3">
                <hc:SimpleText hc:Text="姓名：" hc:TextAlignment="Center" hc:VerticalAlignment="Center"/>
            </hc:Col>
            <hc:Col Span="4">
                <hc:TextBox/>
            </hc:Col>
            <hc:Col Span="4">
                <hc:SimpleText hc:Text="发展编号：" hc:TextAlignment="Center" hc:VerticalAlignment="Center"/>
            </hc:Col>
            <hc:Col Span="7">
                <hc:TextBox/>
            </hc:Col>
            <hc:Col Span="3">
                <hc:SimpleText hc:Text="民族：" hc:TextAlignment="Center" hc:VerticalAlignment="Center"/>
            </hc:Col>
            <hc:Col Span="3">
                <hc:ComboBox/>
            </hc:Col>
        </hc:Row>
        <hc:ScrollViewer HorizontalAlignment="Right" Margin="0,20,20,5" Width="200">
            <hc:ButtonGroup>
                
            </hc:ButtonGroup>
        </hc:ScrollViewer>
    </hc:SimplePanel>
</hc:Window>
