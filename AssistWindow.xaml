<hc:Window x:Class="DocumentHelper.AssistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentHelper"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="AssistWindow" Height="450" Width="800">
    <!--窗体比例应偏向竖屏，启动后停靠右上角-->
    <Grid>
        <hc:SimpleStackPanel Orientation="Vertical" DataContextChanged="SimpleStackPanel_DataContextChanged">
            <hc:SimpleText Text="当前选中： 上一位： 下一位：" Margin="20"/>
            <local:StudentDataShower x:Name="NameShower" DataHint="姓名：" DataResource="{Binding StudentName}" Margin="20,5,20,5">
                <local:StudentDataShower.DataContext>
                    <local:Student/>
                </local:StudentDataShower.DataContext>
            </local:StudentDataShower>
            <local:StudentDataShower x:Name="NationShower" DataHint="民族：" DataResource="{Binding StudentNation}" Margin="20,5,20,5">
                <local:StudentDataShower.DataContext>
                    <local:Student/>
                </local:StudentDataShower.DataContext>
            </local:StudentDataShower>
            <!--数据显示组件显示逻辑需要修改得更符合整体风格-->
            <!--添加其它数据显示组件在此处-->
        </hc:SimpleStackPanel>
    </Grid>
</hc:Window>
