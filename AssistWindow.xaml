<hc:Window x:Class="DocumentHelper.AssistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentHelper"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="AssistWindow" Height="450" Width="300" ShowNonClientArea="False">
    <!--窗体比例应偏向竖屏，启动后停靠右上角-->
    <hc:Window.CommandBindings>
        <CommandBinding Command="local:AssistWindow.LastPageCommand" CanExecute="LastPageCommand_CanExecute" Executed="LastPageCommand_Executed" />
        <CommandBinding Command="local:AssistWindow.NextPageCommand" CanExecute="NextPageCommand_CanExecute" Executed="NextPageCommand_Executed" />
    </hc:Window.CommandBindings>
    <Grid>
        <hc:SimpleStackPanel Orientation="Vertical" DataContextChanged="SimpleStackPanel_DataContextChanged">
            <hc:SimpleText Text="当前选中： 上一位： 下一位：" Margin="20"/>
            <local:StudentDataShower x:Name="NameShower" DataHint="姓名：" DataResource="{Binding StudentName}" Margin="20,5,20,5">
                <local:StudentDataShower.DataContext>
                    <local:Student/>
                </local:StudentDataShower.DataContext>
            </local:StudentDataShower>
            <local:StudentDataShower x:Name="NationShower" DataHint="民族：" DataResource="{Binding StudentNation}" Margin="20,5,20,5">
                <local:StudentDataShower.DataContext>
                    <local:Student/>
                </local:StudentDataShower.DataContext>
            </local:StudentDataShower>
            <!--数据显示组件显示逻辑需要修改得更符合整体风格-->
            <!--添加其它数据显示组件在此处-->
            
        </hc:SimpleStackPanel>
        <hc:SimpleStackPanel Orientation="Vertical" VerticalAlignment="Bottom">
            <hc:SimpleStackPanel VerticalAlignment="Top">
                <hc:Divider Height="5" Margin="40,0,40,0" LineStrokeThickness="2" LineStroke="#FF7D8F95"/>
            </hc:SimpleStackPanel>
            <!-- 优化后的DataGrid -->
            <!--按钮栏-->
            <hc:SimpleStackPanel VerticalAlignment="Bottom" Height="60" Orientation="Horizontal">
                <Button x:Name="BeforePage" Command="local:AssistWindow.LastPageCommand" Content="上一条" Margin="20,0,10,0" Height="40" Width="65"/>
                <Button x:Name="AfterPage" Command="local:AssistWindow.NextPageCommand" Content="下一条" Margin="20,0,10,0" Height="40" Width="65" Background="#326CF3" Foreground="White"/>
                <Button x:Name="Exit" Content="退出" Margin="20,0,10,0" Height="40" Width="70" Background="#326CF3" Foreground="White" Click="Exit_Click"/>
            </hc:SimpleStackPanel>
        </hc:SimpleStackPanel>

    </Grid>
</hc:Window>
